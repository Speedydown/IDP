<Page
    x:Class="App_Spin.SpinUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_Spin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:Name="gridApp" HorizontalAlignment="Left" Height="100" Margin="58,49,0,0" VerticalAlignment="Top" Width="100">
            <Image x:Name="imgApp" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="Assets/SmallLogo.png"/>
        </Grid>
        <ComboBox x:Name="cmbModeSelect" HorizontalAlignment="Left" Margin="200,150,0,0" VerticalAlignment="Top" Width="120" FontFamily="Global User Interface"/>
        <TextBlock HorizontalAlignment="Left" Margin="200,49,0,0" TextWrapping="Wrap" Text="Spider Control" VerticalAlignment="Top" Height="100" Width="500" FontSize="72"/>
        <AppBarButton HorizontalAlignment="Left" Label="Connected" VerticalAlignment="Top" FontFamily="Global User Interface" Margin="1203,55,0,0" Click="AppBarButton_Click">
            <AppBarButton.Icon>
                <SymbolIcon/>
            </AppBarButton.Icon>
            <AppBarButton Height="105" Label="btnAppBar" Width="183">
                <AppBarButton.Icon>
                    <SymbolIcon/>
                </AppBarButton.Icon>
            </AppBarButton>
        </AppBarButton>

        <Grid x:Name="grdJoystick" HorizontalAlignment="Left" Margin="200,200,0,0" Width="400" Height="400" VerticalAlignment="Top" Background="Blue" PointerReleased="grdReleased" PointerPressed="grdPressed">
            <Ellipse x:Name="joyStick" Fill="#FFF4F4F5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Margin="150,150,0,0" Stroke="Black" Width="100"/>

        </Grid>


        <Button x:Name="btnJoyTest" Content="Joystick Test" Click="cmd_joyTest_Click" Margin="200,610,0,0"/>
        <TextBox x:Name="txtJoytest" HorizontalAlignment="Left" Margin="667,488,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <Button Content="btnTest" HorizontalAlignment="Left" Margin="664,439,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Page>
