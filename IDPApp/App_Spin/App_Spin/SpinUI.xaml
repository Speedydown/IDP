<Page
    x:Class="App_Spin.SpinUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_Spin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="DarkGreen">
        <Grid x:Name="gridApp" HorizontalAlignment="Left" Height="100" Margin="50,50,0,0" VerticalAlignment="Top" Width="1280">
            <Image x:Name="imgApp" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="Assets/SmallLogo.png"/>
            <TextBlock HorizontalAlignment="Left" Margin="150,0,0,0" TextWrapping="Wrap" Text="Spider Control" VerticalAlignment="Top" Height="100" Width="500" FontSize="72"/>
            <TextBlock x:Name="lblBattery" Margin="1100,10,0,0" VerticalAlignment="Top" Height="30" Width="100" FontSize="15"/>
            <TextBlock x:Name="lblSlope" Margin="1100,60,0,0" VerticalAlignment="Top" Height="30" Width="100" FontSize="15"/>        
        </Grid>

        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,200,0,0" Width="400" Height="400">
            <Canvas>
                
                <Ellipse x:Name="joyStick" Fill="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Height="400" Margin="0,0,0,0" Stroke="Black" Width="400"/>
                <Button x:Name="btnFw" Height="100" Width="100" Content="Forward" Canvas.Left="150" Canvas.Top="10" PointerPressed="btnFw_Pressed" PointerReleased="btnFw_Released" Opacity="0"/>
                <Button x:Name="btnBw" Height="100" Width="100" Content="Backward" Canvas.Left="150" Canvas.Top="290" PointerPressed="btnBw_Pressed" PointerReleased="btnBw_Released" Opacity="0"/>
                <Button x:Name="btnLeft" Height="100" Width="100" Content="Left" Canvas.Left="10" Canvas.Top="150" PointerPressed="btnLeft_Pressed" PointerReleased="btnLeft_Released" Opacity="0"/>
                <Button x:Name="btnRight" Height="100" Width="100" Content="Right" Canvas.Left="290" Canvas.Top="150" PointerPressed="btnRight_Pressed" PointerReleased="btnRight_Released" Opacity="0"/>

                <Button x:Name="btnLeftFw" Height="100" Width="100" Content="LeftFw" Canvas.Left="60" Canvas.Top="60" PointerPressed="btnLeftFw_Pressed" PointerReleased="btnLeftFw_Released" Opacity="0"/>
                <Button x:Name="btnRightFw" Height="100" Width="100" Content="RightFw" Canvas.Left="240" Canvas.Top="60" PointerPressed="btnRightFw_Pressed" PointerReleased="btnRightFw_Released" Opacity="0"/>
                <Button x:Name="btnLeftBw" Height="100" Width="100" Content="LeftBw" Canvas.Left="60" Canvas.Top="240" PointerPressed="btnLeftBw_Pressed" PointerReleased="btnLeftBw_Released" Opacity="0"/>
                <Button x:Name="btnRightBw" Height="100" Width="100" Content="RightBw" Canvas.Left="240" Canvas.Top="240" PointerPressed="btnRightBw_Pressed" PointerReleased="btnRightBw_Released" Opacity="0"/>
            </Canvas>
        </Grid>
        
        <TextBox x:Name="txtJoytest" HorizontalAlignment="Left" Margin="200,620,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="160"/>
        <Image Source="Assets/imgVideo.jpg" HorizontalAlignment="Left" Width="576" Height="432" Margin="700,190,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
