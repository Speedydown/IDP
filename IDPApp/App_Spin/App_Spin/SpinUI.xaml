<Page
    x:Class="App_Spin.SpinUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_Spin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:Name="gridApp" HorizontalAlignment="Left" Height="100" Margin="58,49,0,0" VerticalAlignment="Top" Width="100">
            <Image x:Name="imgApp" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="Assets/SmallLogo.png"/>
        </Grid>
        <ComboBox x:Name="cmbModeSelect" HorizontalAlignment="Left" Margin="200,150,0,0" VerticalAlignment="Top" Width="120" FontFamily="Global User Interface"/>
        <TextBlock HorizontalAlignment="Left" Margin="200,49,0,0" TextWrapping="Wrap" Text="Spider Control" VerticalAlignment="Top" Height="100" Width="500" FontSize="72"/>
        <AppBarButton HorizontalAlignment="Left" Label="Connected" VerticalAlignment="Top" FontFamily="Global User Interface" Margin="1203,55,0,0" Click="AppBarButton_Click">
            <AppBarButton.Icon>
                <SymbolIcon/>
            </AppBarButton.Icon>
            <AppBarButton Height="105" Label="btnAppBar" Width="183">
                <AppBarButton.Icon>
                    <SymbolIcon/>
                </AppBarButton.Icon>
            </AppBarButton>
        </AppBarButton>

        <Grid x:Name="grdJoystick" HorizontalAlignment="Left" Margin="200,200,0,0" Width="400" Height="400" VerticalAlignment="Top" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Canvas>
                <Ellipse x:Name="joyStick" Fill="#FFF4F4F5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="400" Margin="0,0,0,0" Stroke="Black" Width="400"/>
                <Button x:Name="btnFw" Content="Forward" Canvas.Left="150" Canvas.Top="25" PointerPressed="btnFw_Pressed" PointerReleased="btnFw_Released"/>
                <Button x:Name="btnBw" Content="Backward" Canvas.Left="150" Canvas.Top="325" PointerPressed="btnBw_Pressed" PointerReleased="btnBw_Released"/>
                <Button x:Name="btnLeft" Content="Left" Canvas.Left="25" Canvas.Top="175"/>
                <Button x:Name="btnRight" Content="Right" Canvas.Left="275" Canvas.Top="175"/>
                
                <Button x:Name="btnLeftFw" Content="LeftFw" Canvas.Left="80" Canvas.Top="100"/>
                <Button x:Name="btnRightFw" Content="RightFw" Canvas.Left="250" Canvas.Top="100"/>
                <Button x:Name="btnLeftBw" Content="LeftBw" Canvas.Left="80" Canvas.Top="270"/>
                <Button x:Name="btnRightBw" Content="RightBw" Canvas.Left="250" Canvas.Top="270"/>
            </Canvas>
        </Grid>
        
        <TextBox x:Name="txtJoytest" HorizontalAlignment="Left" Margin="700,700,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="160"/>
        <Image Source="Assets/imgVideo.jpg" HorizontalAlignment="Left" Height="480" Margin="700,200,0,0" VerticalAlignment="Top" Width="640"/>

    </Grid>
</Page>
